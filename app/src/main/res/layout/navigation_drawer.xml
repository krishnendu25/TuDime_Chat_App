<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:id="@+id/imge_bg"
                android:alpha="0.8"
                android:src="@drawable/navigation_drawer_cover_bg"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_drawer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_color="@color/gray"
                app:civ_border_width="2dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:src="@drawable/navigation_drawer_pro_pic" />

            <TextView
                android:id="@+id/txt_anna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textColor="@color/sky_blue"
                android:textSize="25sp"
                android:visibility="gone"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Stay_hapy"
            android:textColor="@color/active_fonts"
            android:visibility="gone"
            android:textSize="@dimen/dimen_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@color/active_fonts" />

    </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/listView1"
                layout="@layout/listview_navigation" />
        </RelativeLayout>






</LinearLayout>