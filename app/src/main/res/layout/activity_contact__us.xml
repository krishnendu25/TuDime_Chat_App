<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.activity.Contact_Us">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:orientation="vertical"
              android:background="@color/color_accent"
              android:layout_weight="1.3">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/get_in_touch"
                  android:layout_marginTop="@dimen/padding_10"
                  android:layout_marginStart="@dimen/dimen_25dp"
                  android:layout_marginEnd="@dimen/dimen_25dp"
                  android:textSize="@dimen/dimen_25dp"
                  android:fontFamily="@font/avenirnext_heavy"
                  android:textColor="#fff"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/drop_us_a_line_or_visit_for_a_cup_of_coffee"
                  android:textSize="@dimen/dimen_14sp"
                  android:textStyle="bold"
                  android:layout_marginTop="@dimen/padding_5"
                  android:layout_marginStart="@dimen/dimen_25dp"
                  android:layout_marginEnd="@dimen/dimen_25dp"
                  android:fontFamily="@font/manrop_regular"
                  android:textColor="#fff"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/we_glad_to_see_our_friends"
                  android:textSize="@dimen/dimen_14sp"
                  android:layout_marginTop="@dimen/padding_5"
                  android:layout_marginStart="@dimen/dimen_25dp"
                  android:layout_marginEnd="@dimen/dimen_25dp"
                  android:textStyle="bold"
                  android:fontFamily="@font/manrop_regular"
                  android:textColor="#fff"/>
          </LinearLayout>

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dimen_20dp"
              android:layout_marginEnd="@dimen/dimen_20dp"
              android:layout_marginTop="110dp"
              app:cardElevation="@dimen/dimen_25dp"
              app:cardBackgroundColor="#fff"
              app:cardCornerRadius="@dimen/padding_5">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginTop="@dimen/padding_10"
                  android:layout_marginBottom="@dimen/dimen_25dp"
                  android:layout_marginStart="@dimen/padding_10"
                  android:layout_marginEnd="@dimen/padding_10"
                  android:orientation="vertical">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/full_name"
                      android:textStyle="bold"
                      android:layout_marginTop="@dimen/padding_5"
                      android:fontFamily="@font/manrop_regular"
                      android:textColor="@color/primary_blue"
                      android:textSize="@dimen/dimen_16dp"/>
                  <EditText
                      android:id="@+id/name_ed"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:background="@drawable/blue_edittext"
                      android:layout_marginTop="@dimen/padding_5"
                      android:paddingStart="@dimen/padding_10"
                      android:singleLine="true"
                      android:textSize="@dimen/dimen_14sp"
                      android:paddingLeft="@dimen/padding_10" />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/email"
                      android:textStyle="bold"
                      android:layout_marginTop="@dimen/padding_5"
                      android:fontFamily="@font/manrop_regular"
                      android:textColor="@color/primary_blue"
                      android:textSize="@dimen/dimen_16dp"/>
                  <EditText
                      android:id="@+id/email_ed"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:background="@drawable/blue_edittext"
                      android:layout_marginTop="@dimen/padding_5"
                      android:paddingStart="@dimen/padding_10"
                      android:singleLine="true"
                      android:textSize="@dimen/dimen_14sp"
                      android:paddingLeft="@dimen/padding_10" />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/phone_no"
                      android:textStyle="bold"
                      android:layout_marginTop="@dimen/padding_5"
                      android:fontFamily="@font/manrop_regular"
                      android:textColor="@color/primary_blue"
                      android:textSize="@dimen/dimen_16dp"/>
                  <EditText
                      android:id="@+id/phone_ed"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:background="@drawable/blue_edittext"
                      android:layout_marginTop="@dimen/padding_5"
                      android:paddingStart="@dimen/padding_10"
                      android:singleLine="true"
                      android:inputType="number"
                      android:maxLength="10"
                      android:textSize="@dimen/dimen_14sp"
                      android:paddingLeft="@dimen/padding_10" />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/address"
                      android:layout_marginTop="@dimen/padding_5"
                      android:textStyle="bold"
                      android:fontFamily="@font/manrop_regular"
                      android:textColor="@color/primary_blue"
                      android:textSize="@dimen/dimen_16dp"/>
                  <EditText
                      android:id="@+id/address_ed"
                      android:layout_width="match_parent"
                      android:layout_height="80dp"
                      android:background="@drawable/blue_edittext"
                      android:layout_marginTop="@dimen/padding_5"
                      android:paddingStart="@dimen/padding_10"
                      android:singleLine="false"
                      android:textSize="@dimen/dimen_14sp"
                      android:paddingLeft="@dimen/padding_10" />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/country"
                      android:layout_marginTop="@dimen/padding_5"
                      android:textStyle="bold"
                      android:fontFamily="@font/manrop_regular"
                      android:textColor="@color/primary_blue"
                      android:textSize="@dimen/dimen_16dp"/>
                  <EditText
                      android:id="@+id/contry_ed"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:background="@drawable/blue_edittext"
                      android:layout_marginTop="@dimen/padding_5"
                      android:paddingStart="@dimen/padding_10"
                      android:singleLine="true"
                      android:textSize="@dimen/dimen_14sp"
                      android:paddingLeft="@dimen/padding_10" />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/pincode"
                      android:layout_marginTop="@dimen/padding_5"
                      android:textStyle="bold"
                      android:fontFamily="@font/manrop_regular"
                      android:textColor="@color/primary_blue"
                      android:textSize="@dimen/dimen_16dp"/>
                  <EditText
                      android:id="@+id/pincode_ed"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:background="@drawable/blue_edittext"
                      android:layout_marginTop="@dimen/padding_5"
                      android:paddingStart="@dimen/padding_10"
                      android:singleLine="true"
                      android:inputType="number"
                      android:maxLength="6"
                      android:textSize="@dimen/dimen_14sp"
                      android:paddingLeft="@dimen/padding_10" />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/comments"
                      android:layout_marginTop="@dimen/padding_5"
                      android:textStyle="bold"
                      android:fontFamily="@font/manrop_regular"
                      android:textColor="@color/primary_blue"
                      android:textSize="@dimen/dimen_16dp"/>
                  <EditText
                      android:id="@+id/comments_ed"
                  android:singleLine="false"
                      android:layout_width="match_parent"
                      android:layout_height="150dp"
                      android:background="@drawable/blue_edittext"
                      android:layout_marginTop="@dimen/padding_5"
                      android:paddingStart="@dimen/padding_10"
                      android:textSize="@dimen/dimen_14sp"
                      android:paddingLeft="@dimen/padding_10" />

                  <TextView
                      android:id="@+id/submit_btn"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="@dimen/padding_10"
                      android:gravity="center"
                      android:textColor="#fff"
                      android:fontFamily="@font/avenirnextbold"
                      android:textSize="@dimen/dimen_18dp"
                      android:text="@string/send"
                      android:background="@drawable/bg_btn_white"/>
              </LinearLayout>



          </androidx.cardview.widget.CardView>
      </RelativeLayout>

  </ScrollView>








</RelativeLayout>