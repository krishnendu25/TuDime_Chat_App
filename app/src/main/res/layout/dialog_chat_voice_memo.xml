<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog_stroke">

        <TextView
            android:id="@+id/txvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/count"
            android:gravity="center"
            android:text="@string/hold_amp_talk"
            android:textColor="@color/primary_grey_dark"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgRecorder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/txvTimer"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_audio_normal"
            android:padding="25dp"
            android:src="@drawable/microphone_blue" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/imgRecorder"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/separator"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txvDone"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dialog_OK"
                android:textColor="@color/primary_grey_dark"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/txvCancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/primary_grey_dark"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>