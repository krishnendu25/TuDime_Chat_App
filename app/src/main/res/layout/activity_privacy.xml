<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.TuDime.ui.activity.PrivacyActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.25"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/hide_from_all"
                    android:textColor="@color/active_fonts"
                    android:textSize="17sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:checked="false" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/circle_with_tick_icon"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/hide_from_specific_user"
                android:textColor="@color/active_fonts"
                android:textSize="17sp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color"
                android:visibility="gone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/circle_with_tick_icon"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/block_user"
                android:textColor="@color/active_fonts"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:background="@color/lines_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.23"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/remove_time_stamp"
                    android:textColor="@color/active_fonts"
                    android:textSize="17sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.5"
                    android:checked="false" />

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/active_tudime_pin"
                    android:textColor="@color/active_fonts"
                    android:textSize="17sp" />

                <Switch
                    android:id="@+id/Active_password_swithch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />


            </RelativeLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color" />

            <TextView
                android:id="@+id/set_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/circle_with_tick_icon"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/set_pass_tudime"
                android:textColor="@color/active_fonts"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color" />

            <TextView
                android:id="@+id/change_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/circle_with_tick_icon"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/change_password_tudime"
                android:textColor="@color/active_fonts"
                android:textSize="17sp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color"
                android:visibility="gone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/circle_with_tick_icon"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/set_pass_encounter"
                android:textColor="@color/active_fonts"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:background="@color/lines_color" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"

                android:drawablePadding="10dp"
                android:drawableRight="@drawable/circle_with_tick_icon"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/change_password_encounter"
                android:textColor="@color/active_fonts"
                android:textSize="17sp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color"
                android:visibility="gone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/circle_with_tick_icon"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/scret_chat_pass"
                android:textColor="@color/active_fonts"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/circle_with_tick_icon"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:visibility="gone"
                android:text="@string/set_pass_individually"
                android:textColor="@color/active_fonts"
                android:textSize="17sp" />

            <View
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color" />

            <TextView
                android:id="@+id/remove_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/circle_with_tick_icon"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/remove_password"
                android:textColor="@color/active_fonts"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lines_color"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>