<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#fff"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/remove_password"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_accent"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/cancel"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:src="@drawable/remove_icon"
                    android:layout_alignParentRight="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_pass"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sec_ques"
                        android:textSize="18dp"
                        android:textColor="@color/active_fonts"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sec_ques"
                        android:textSize="16dp"
                        android:id="@+id/sec_ques"
                        android:textColor="@color/active_fonts"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sec_ans"
                        android:textSize="18dp"
                        android:id="@+id/sec_ans"
                        android:layout_below="@id/lin_sec_ques1"
                        android:textColor="@color/active_fonts"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/sec_ans1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="@string/sec_ans1"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_edit"
                        android:paddingLeft="10dp"
                        android:textColor="@color/active_fonts"
                        android:textColorHint="#676767"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/passw"
                        android:textSize="18dp"
                        android:id="@+id/password_enter"
                        android:textColor="@color/active_fonts"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/old_pass"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="@string/enter_old_pass"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:background="@drawable/bg_edit"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/active_fonts"
                        android:textColorHint="#676767"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/save"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/sky_blue"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:paddingRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/remove_password"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>






            </RelativeLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>