<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="obj.quickblox.sample.chat.java.ui.activity.PapPallIntegration">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/my_balance"
                android:textSize="@dimen/dimen_25dp"
                android:fontFamily="@font/avenirnextbold"
                android:textColor="@color/sky_blue"
                android:gravity="center"
                android:layout_weight="2.2"/>
            <TextView
                android:id="@+id/My_Balence"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="---"
                android:textSize="@dimen/dimen_20dp"
                android:fontFamily="@font/avenirnextbold"
                android:textColor="@color/transparent_gray_shade_darkest"
                android:gravity="center"
                android:layout_weight="2.8"/>


        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="2px"
    android:layout_marginTop="@dimen/dimen_20dp"
    android:background="@color/trans_ecards_sig"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingStart="@dimen/padding_10"
            android:hint="@string/enter_amount"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:inputType="number"
            android:id="@+id/enter_amount"
            android:background="@drawable/bg_edit"
            android:textColor="@color/active_fonts"
            android:textColorHint="@color/lite_grey"
            android:paddingLeft="@dimen/padding_10" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/buy_call_credit"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/amount_paypal"
            android:background="@color/sky_blue"
            android:layout_margin="20dp"/>

    </LinearLayout>




</RelativeLayout>
