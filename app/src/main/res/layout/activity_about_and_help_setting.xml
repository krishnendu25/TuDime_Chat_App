<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.TuDime.ui.activity.AboutAndHelpSetting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/active_fonts"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/version"
                android:textColor="@color/lite_grey"
                android:text="5.0"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"/>

            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lines_color"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/FAQ"
                android:visibility="gone"
                android:id="@+id/FAQ"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/active_fonts"/>

            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@color/lines_color"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/change_lang"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:textColor="@color/active_fonts"/>

            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@color/lines_color"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/terms10"
                android:id="@+id/terms"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/active_fonts"/>

            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lines_color"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/feedback"
                android:text="@string/feedback"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/active_fonts"/>


            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lines_color"
                android:layout_marginTop="15dp"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>