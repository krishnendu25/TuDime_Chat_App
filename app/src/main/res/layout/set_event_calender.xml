<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardMaxElevation="@dimen/padding_10"
        app:cardElevation="@dimen/padding_10"
        app:cardCornerRadius="@dimen/padding_15">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@color/sky_blue"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_events"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/avenirnext_heavy"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/remove_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/remove"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/enter_edt_date"
                android:layout_width="260dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:textColor="@color/random_color_2"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_edit">

                <EditText
                    android:id="@+id/event_name_edit"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:hint="@string/event_name"
                    android:singleLine="true"
                    android:fontFamily="@font/manrop_regular"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/active_fonts"
                    android:textColorHint="#674767"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edit">

                <TextView
                    android:id="@+id/enter_edt_time"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:hint="@string/enter_time"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/manrop_regular"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/time"
                    android:drawablePadding="10dp"
                    android:textColor="@color/active_fonts"
                    android:textColorHint="#674767"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edit">

                <EditText
                    android:id="@+id/enter_edt_desc"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_description"
                    android:singleLine="true"
                    android:background="@null"
                    android:fontFamily="@font/manrop_regular"
                    android:gravity="top"
                    android:padding="10dp"
                    android:textColor="@color/active_fonts"
                    android:textColorHint="#674767"
                    android:textSize="18sp" />
            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:id="@+id/save"
                android:background="@drawable/bg_btn_white"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/avenirnext_heavy"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>