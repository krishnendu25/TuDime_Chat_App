<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="70dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:gravity="center"
    tools:ignore="RtlHardcoded"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2px"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user"
            android:layout_width="60dp"
            android:layout_marginEnd="10dp"
            android:layout_height="60dp"
            app:civ_border_color="@color/trans_ecards_sig"
            app:civ_border_width="2dp"
            android:layout_marginRight="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_user_login"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:layout_marginEnd="20dp"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:fontFamily="@font/manrope_extrabold"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/dimen_16dp"
                android:paddingLeft="10dp" />
            <TextView
                android:id="@+id/text_loginid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginEnd="20dp"
                android:gravity="center|start"
                android:fontFamily="@font/manrop_regular"
                android:textColor="@color/black_transparent_50"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/dimen_12sp"
                android:paddingLeft="10dp" />

        </LinearLayout>


        <CheckBox
            android:id="@+id/checkbox_user"
            style="@style/UserCheckboxStyle"
            android:visibility="gone"
            android:theme="@style/MyCheckBox"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/primary_dark" />

</LinearLayout>